# If not running interactively, don't do anything
[[ $- != *i* ]] && return

export EDITOR=nvim

alias vim='nvim'
alias vi='nvim'

alias ls='ls --color=auto'
alias grep='grep --color=auto'

export PS1="\[$(tput setaf 42)\]\w \[$(tput setaf 33)\]‚ùØ \[$(tput setaf 14)\]\[$(tput sgr0)\]"
